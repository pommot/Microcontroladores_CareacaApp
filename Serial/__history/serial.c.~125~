#include "2401.c"

#define RX_BUFFER_SIZE 12 
int8 rx_wr_index = 0; 
int8 lock_state = 0, rxd,lido, valid_data_count; 
unsigned int8 rx_buffer[RX_BUFFER_SIZE];
int1 data_avail = FALSE, got_id = FALSE,del = FALSE,got_del=FALSE,edit,got_edit;

